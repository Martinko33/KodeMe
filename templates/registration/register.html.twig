{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container height-60vh">
        <div class="text-center">
            <h1 class="mt-5">Register</h1>

            {{ form_start(registrationForm) }}
            <div class="container text-center">
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.name) }}</span>
                        </div>
                    </div>
                    <div class="row">
{#                         form_errors me sort les error fait par formulaire#}
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.name) }}
                        </div>
                        <div class="">
                            {{ form_widget(registrationForm.name, {'attr': {'placeholder': 'Nom'}}) }}
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.firstname) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.firstname) }}
                        </div>
                        <div class="">
                            {{ form_widget(registrationForm.firstname, {'attr': {'placeholder': 'Prenom'}}) }}
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.date) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.date) }}
                        </div>
                        <div class="">
                            {{ form_widget(registrationForm.date) }}
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.email) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                        <div class="">
                            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'E-mail'}}) }}
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.plainPassword) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                        <div class="">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div>
                            <span>{{ form_label(registrationForm.agreeTerms) }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="bg-danger text-white text-center ">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                        <div class="mb-5">
                            {{ form_widget(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock main %}
