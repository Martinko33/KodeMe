{% extends "admin/base_admin.html.twig" %}
{% block title %}
    Administrator Insert/Update
{% endblock title %}

{% block header_admin %}
    <h1 class="text-center p-2 text-white bg-noir">Update Cours</h1>
{% endblock header_admin %}

{% block main %}
    {{form_start(formClassView)}}

    <div class="container-fluid ">
        <div class="row justify-content-around mb-5 pt-5 ">
            <div class="col-5">
                <div class="row">
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formClassView.name) }}</h3>
                    </div>
                </div>
                <div class="row">
                    {# form_errors me sort les error fait par formulaire #}
                    <div class="bg-danger text-white text-center ">
                        {{ form_errors(formClassView.name) }}
                    </div>
                    <div class="border border-4 border border-danger p-0 ">
                        {{ form_widget(formClassView.name, {'attr': {'class': 'full-width','placeholder': 'Faut mettre jolie nom de cours!!'}}) }}
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="row ">
                    {{ form_errors(formClassView.description) }}
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formClassView.description) }}</h3>
                    </div>
                </div>
                <div class="row ">
                    <div class="border border-4 border border-danger p-0 ">
                        {{ form_widget(formClassView.description, {'attr': {'class': 'full-width','placeholder': 'STP fait jolie description!!'}}) }}
                    </div>

                </div>
            </div>
        </div>

        <div class="row justify-content-around mb-5">
            <div class="col-5">
                <div class="row">
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formClassView.price) }}</h3>
                    </div>
                </div>
                <div class="row ">
                    <div class=" ">
                        {{ form_widget(formClassView.price)  }}
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="row">
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formClassView.time) }}</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="">
                        {{ form_widget(formClassView.time, {'attr': {'class': 'published-bool full-width', 'id': 'check'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div>
            {{ form_row(formClassView.icon) }}
        </div>

        <div class="row justify-content-around mb-5">
            <div class="col-5">
                <div class="row">
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formClassView.color) }}</h3>
                    </div>
                </div>
                <div class="row ">
                    <div class=" ">
                        {{ form_widget(formClassView.color)  }}
                    </div>
                </div>
            </div>
        </div>

        {#
        <div class="row justify-content-around mb-5">
            <div class="col-5">
                <div class="row">
                    <div class="fw-bold text-center fs-3 col-10">
                        <h3>{{ form_label(formCategoryView.image) }}</h3>
                    </div>
                </div>
                <div class="row ">
                    <div class=" ">
                        {{ form_widget(formCategoryView.image)  }}
                    </div>
                </div>
            </div>
        </div>
        #}

        <div class="submit-form-article d-flex justify-content-center pb-5">
            {{ form_widget(formClassView.submit) }}
        </div>
    </div>
    {{ form_end(formClassView) }}
{% endblock main %}